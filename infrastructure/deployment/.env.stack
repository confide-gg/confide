# Confide Central Stack Configuration
# Copy this file to .env and update with your values

# Domain & SSL
DOMAIN=central.yourdomain.com

# Versions
CENTRAL_VERSION=latest

# Database
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_MAX_CONNECTIONS=200

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_MAX_MEMORY=2gb

# Central Service Configuration
CENTRAL_REPLICAS=3
DB_MAX_CONNECTIONS=100
DB_API_POOL_SIZE=80
DB_WEBSOCKET_POOL_SIZE=60
WEBSOCKET_MESSAGE_BUFFER_SIZE=256

# Logging
RUST_LOG=info,confide_central=info
