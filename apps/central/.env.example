# Database
DATABASE_URL=postgresql://user:password@localhost:5432/confide

# Redis
REDIS_URL=redis://localhost:6379

# Spotify Integration (optional - for Activities feature)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/spotify/callback

# S3 Storage (Hetzner or AWS-compatible)
S3_ENDPOINT=https://fsn1.your-objectstorage.com
S3_REGION=eu-central-1
S3_BUCKET=confide-attachments
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_PRESIGNED_URL_EXPIRY=3600
S3_MAX_FILE_SIZE_BYTES=104857600
