{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Confide",
  "version": "0.21.0",
  "identifier": "com.confide.app",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/confide-gg/confide/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk1M0RGQTE5MkY1QzdBMkYKUldRdmVsd3ZHZm85bFh0ZDJRRmtCUVZqcmx2c01IVnlqNmxzMkpmcExKaE5kcmt4N1VjM25BZXQK"
    },
    "shell": {
      "open": true
    }
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Confide",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true
      }
    ],
    "withGlobalTauri": false,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "sounds/*"
    ],
    "iOS": {
      "developmentTeam": null
    },
    "macOS": {
      "signingIdentity": "-",
      "entitlements": "entitlements.plist",
      "frameworks": [],
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "tsp": false,
      "wix": {
        "language": "en-US",
        "template": null,
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      },
      "nsis": {
        "template": null,
        "languages": [
          "English"
        ],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libnotify-bin",
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "libasound2",
          "libssl3",
          "ffmpeg"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}