{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-focus",
    "core:window:allow-unminimize",
    "opener:default",
    "shell:allow-open",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    {
      "identifier": "macos-permissions:default",
      "platforms": ["macos"]
    },
    "os:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:*/**"
        },
        {
          "url": "http://127.0.0.1:*/**"
        },
        {
          "url": "https://central.confide.gg/**"
        },
        {
          "url": "https://*.confide.gg/**"
        },
        {
          "url": "https://tenor.googleapis.com/**"
        },
        {
          "url": "ws://localhost:*/**"
        },
        {
          "url": "ws://127.0.0.1:*/**"
        },
        {
          "url": "wss://central.confide.gg/**"
        },
        {
          "url": "wss://*.confide.gg/**"
        }
      ]
    },
    "updater:default",
    "process:allow-restart",
    "store:default"
  ]
}